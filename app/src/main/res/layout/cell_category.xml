<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_content"
    android:layout_marginBottom="@dimen/cell_vertical_margin"
    android:layout_marginEnd="@dimen/cell_horizontal_margin"
    android:layout_marginStart="@dimen/cell_horizontal_margin"
    android:layout_marginTop="@dimen/cell_vertical_margin" >
<LinearLayout
    android:id="@+id/cell"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_attribute_height"
    android:layout_margin="@dimen/cell_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true" >

    <TextView
        android:id="@+id/description"
        style="@style/CellTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test1"
        android:textSize="@dimen/cell_attribute_text"
        android:layout_marginStart="@dimen/cell_horizontal_margin" />
</LinearLayout>
</android.support.v7.widget.CardView>