<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_content"
    android:layout_marginBottom="@dimen/cell_vertical_margin"
    android:layout_marginEnd="@dimen/cell_horizontal_margin"
    android:layout_marginStart="@dimen/cell_horizontal_margin"
    android:layout_marginTop="@dimen/cell_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authors_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/CellTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/book_title_min_height"
            android:text="test1"
            android:textSize="@dimen/cell_title_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:background="@color/gray_divider" />

        <com.mobgen.gotmedia.app.presentation.view.TitleDescRowView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title" />

        <View
            android:id="@+id/title_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/Cell_paragraph_left"
            android:background="@color/gray_divider" />

        <com.mobgen.gotmedia.app.presentation.view.TitleDescRowView
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/region" />
  </LinearLayout>
</android.support.v7.widget.CardView>